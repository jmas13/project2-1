<div class="col-xs-6" "col-md-4">
  <%= form_for @customer do |f| %>

  <h3>Customer</h3>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: "form-control" %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: "form-control" %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_num, class: "form-control" %>

  <%= f.label :second_phone_number%>
  <%= f.text_field :phone_num2, class: "form-control" %>

  <%= f.label :address %>
  <%= f.text_field :address, class: "form-control" %>



  <h3>Job contents</h3>
  <%= f.fields_for :jobs do |field| %>
  <%= field.label :brand%>
  <%= field.text_field :brand, class: "form-control" %>

  <%= field.label :model_num %>
  <%= field.text_field :model_num, class: "form-control" %>

  <%= field.label :serial_num %>
  <%= field.text_field :serial_num, class: "form-control" %>

  <%= field.label :purchase_date %>
  <%= field.date_select :purchase_date, class: "form-control" %>

  <%= field.label :scheduled_date %>
  <%= field.date_select :scheduled_date, class: "form-control" %>
  <% end %>

  <%= f.submit %>
  <%end%>
</div>
